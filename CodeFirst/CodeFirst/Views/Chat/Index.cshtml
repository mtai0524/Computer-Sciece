@using CodeFirst.Models.Notifications
@model NotificationViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<style>
    body {
        margin-top: 20px;
    }

    .chat-online {
        color: #34ce57
    }

    .chat-offline {
        color: #e4606d
    }

    .chat-messages {
        display: flex;
        flex-direction: column;
        height: 70vh;
        overflow-y: scroll
    }

   
    .chat-message-left,
    .chat-message-right {
        display: flex;
        flex-shrink: 0;
    }

    .chat-message-left {
        margin-right: auto;
    }

    .list-group {
        max-height: 550px;
        overflow-y: auto;
        border-right: 1px solid #EEEEEE;
    }

    .status {
        width: 10px;
        height: 10px;
        border-radius: 100px;
        border-radius: 100px;
        background: #e6ecf3;
        position: absolute;
        top: 2.2rem;
        left: 3rem;
    }

        .status.online {
            background: #34ce57;

        }

        .status.offline {
            background: #fd7274;
        }

</style>

<main class="content">
    <div class="container p-0">
        <div class="card">
            <div class="row g-0">
                <div class="col-12 col-lg-5 col-xl-3" style="border-right:1px solid #EEEEEE">

                    <div style="border-right: 1px solid #EEEEEE;" class="px-4 d-none d-md-block">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <input type="text" class="form-control my-3" placeholder="Search...">
                            </div>
                        </div>
                    </div>
                    <div class="list-user-status">
                        <div class="list-group-online">
                        </div>
                        <div class="list-group-offline">
                        </div>
                    </div>

                    <hr class="d-block d-lg-none mt-1 mb-0">
                </div>
                <div class="col-12 col-lg-7 col-xl-9" >
                    <div class="py-2 px-4 border-bottom d-none d-lg-block" style="background-color:#484C7F">
                        <div class="d-flex align-items-center py-1" >
                            <div class="position-relative">
                                <img src="https://bootdey.com/img/Content/avatar/avatar3.png" class="rounded-circle mr-1" alt="Sharon Lessman" width="40" height="40">
                            </div>
                            <div class="flex-grow-1 pl-3">
                                <strong style="color: #ffffff;">Sharon Lessman</strong>
                                <div class="text-muted small"><em>Typing...</em></div>
                            </div>
                            <div class="more-options fa-lg">
                                <button style="margin-right:5px" class="btn-phone" title="Start a voice call">
                                    <i class="fa-solid fa-phone" style="color: #ffffff;"></i>
                                </button>
                                <button style="margin-right:5px"  class="btn-video ml-3" title="Start a video call">
                                    <i class="fa-solid fa-video" style="color: #ffffff;"></i>
                                </button>
                                <button style="margin-right:5px" class="btn-information ml-3">
                                    <i class="fa-solid fa-info" style="color: #ffffff;"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="position-relative">
                        <div class="chat-messages p-4">
                        </div>
                    </div>

                    <div class="flex-grow-0 py-3 px-4 border-top">

                        <form asp-controller="Chat" asp-action="SendMessages" method="post">
                            <div class="input-group">
                                <label for="Message"></label>
                                <input asp-for="Message" type="text" class="form-control" placeholder="Type your message">
                                <button type="submit" class="btn btn-primary">Send</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</main>