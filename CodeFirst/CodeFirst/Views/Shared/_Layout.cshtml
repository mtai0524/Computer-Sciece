﻿@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Nhà hàng tiệc cưới - The IreliaKing</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
<link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/mydesign.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CodeFirst.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

    @* <link href="~/layout/styles/layout.css" rel="stylesheet" type="text/css" media="all"> *@
    <base href="~/" />
    <component type="typeof(Microsoft.AspNetCore.Components.Web.HeadOutlet)"
               render-mode="ServerPrerendered" />
</head>
<body>

    @RenderBody()
    <script src="_content/MudBlazor/MudBlazor.min.js"></script>

    <script src="~/microsoft/signalr/dist/browser/signalr.js"></script>
    <base href="~/" />
    <script src="_framework/blazor.server.js"></script>
    <script src="_content/Microsoft.AspNetCore.Components.Web.Extensions/script.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/qrcode.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/admin_assets/bundles/libscripts.bundle.js"></script>

    <!-- Plugin Js-->
    <script src="~/admin_assets/bundles/apexcharts.bundle.js"></script>

    <!-- Jquery Page Js -->
    <script src="~/admin_assets/page/hr.js"></script>
    <!-- Jquery Core Js -->
    <script src="~/js/qrcode.js"></script>
    @await Component.InvokeAsync("Notyf")

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        // Bắt đầu hiển thị spinner khi trang bắt đầu tải
        window.addEventListener("load", function () {
            var spinner = document.getElementById("loading-spinner");
            spinner.style.display = "none"; // Ẩn spinner khi trang đã tải xong
        });
    </script>



    <script src="~/layout/scripts/jquery.min.js"></script>
    <script src="~/layout/scripts/jquery.backtotop.js"></script>
    <script src="~/layout/scripts/jquery.mobilemenu.js"></script>
    <!-- Homepage specific -->
    <script src="~/layout/scripts/jquery.easypiechart.min.js"></script>
</body>
</html>