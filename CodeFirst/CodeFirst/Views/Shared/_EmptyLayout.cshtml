            }

        .additional-functions {
            display: none;
            position: absolute;
            bottom: 60px;
            right: 0;
            background-color: #fff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border: 1px solid #ddd;
            border-radius: 4px;
            padding: 10px;
            z-index: 1000;
        }

        .function-item {
            padding: 8px;
            cursor: pointer;
        }

            .function-item:hover {
                background-color: #f5f5f5;
            }

        .tooltip {
            position: absolute;
            top: -25px;
            left: -10px;
            background-color: rgba(0, 0, 0, 0.8);
            color: #fff;
            padding: 5px;
            border-radius: 4px;
            display: none;
        }

        .floating-button:hover .tooltip {
            display: block;
        }
    </style>

