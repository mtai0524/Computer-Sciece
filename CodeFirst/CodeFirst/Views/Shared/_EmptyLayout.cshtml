    @await RenderSectionAsync("Scripts", required: false)
    <script>
        window.addEventListener("load", function () {
            var spinner = document.getElementById("loading-spinner");
            setTimeout(function () {
                spinner.style.display = "none";
            }, 10);
        });
    </script>
