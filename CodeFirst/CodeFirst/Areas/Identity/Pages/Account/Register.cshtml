@page
@model RegisterModel
@{
    ViewData["Title"] = "Đăng ký tài khoản";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}
<style>
    .custom-box {
        border: 6px double black;
        border-radius: 10px;
        width: 40%;
        padding: 100px 40px;
    }
</style>

 <div class="row center-div" style="margin:100px 0px">
    <div class="custom-box col-md-4 mx-auto">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
            <h2 style ="text-align:center">Đăng ký tài khoản</h2>
            <hr />
            <div class="row">
                <!-- Thêm một hàng để chứa các trường FirstName và LastName -->
                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Input.FirstName" class="form-control" autocomplete="FirstName" aria-required="true" />
                        <label asp-for="Input.FirstName"></label>
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.LastName" class="form-control" autocomplete="LastName" aria-required="true" />
                        <label asp-for="Input.LastName"></label>
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true">
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
           @*  <div class="form-group">
                <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-control" aria-required="true" style="padding:15px; margin-bottom:10px">
                    <option disabled selected>Select role</option>
                </select>
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div> *@
            <div class="form-floating">
                <input asp-for="Input.imageFile" class="form-control" autocomplete="off" aria-required="true" type="file" id="customFile" accept=".jpg, .jpeg, .png">
                <label for="customFile">Choose file</label>
                <span asp-validation-for="Input.imageFile" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-success">Register</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>Đăng nhập nếu đã có tài khoản.</h3>
            <hr />
            <div>
                <p>
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-dark">
                        <span >Đăng nhập</span>
                    </a>
                </p>
            </div>
        </section>
    </div>

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
