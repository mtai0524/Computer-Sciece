@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

@using CodeFirst.Models;
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
<style>
    /* Định dạng ảnh thành hình tròn */
    .rounded-image {
        
        border-radius: 50%;
        display: block;
        margin: 0 auto; /* Để căn giữa ảnh theo chiều ngang */
    }

    /* Định dạng khu vực chứa ảnh */
    .image-container {
        text-align: center; /* Để căn giữa ảnh theo chiều ngang */
    }
</style>
<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.FirstName" class="form-control" />
                <label asp-for="Input.FirstName" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.LastName" class="form-control" />
                <label asp-for="Input.LastName" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.imageFile" class="form-control" autocomplete="off" aria-required="true" type="file" id="customFile" accept=".jpg, .jpeg, .png">
                <label for="customFile">Choose file</label>
                <span asp-validation-for="Input.imageFile" class="text-danger"></span>
                @*do up ảnh lên cloud nên đường link khác với file chọn trong máy*@
            </div>
            
            @{
                var user = await UserManager.GetUserAsync(User);
            }

            <div class="image-container">
                @if (user != null && !string.IsNullOrEmpty(user.Avatar))
                {
                    <img src="@user.Avatar" alt="Avatar" class="rounded-image img-fluid" style="width:60%;margin-top: 10px; margin-bottom: 10px;" />
                }
            </div>

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
