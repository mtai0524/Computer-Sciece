@page
@model CodeFirst.Models.Entities.MenuItemComboMenu
@{
    ViewData["Title"] = "Thêm Menu vào Combo";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Quản lý combo menu</h1>

<form method="post">
    <div class="form-group">
        <label for="ComboMenuId">Chọn Combo Menu:</label>
        <select asp-for="ComboMenuId" asp-items="ViewBag.ComboMenus" class="form-control"></select>
    </div>

    <div class="form-group">
        <label for="SelectedMenuIds">Chọn Menu:</label>
        <select asp-for="MenuId" asp-items="ViewBag.Menus" class="form-control" multiple></select>
    </div>

    <button type="submit" class="btn btn-primary">Thêm Menu vào Combo</button>
</form>
