
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Thống kê</h1>

<style>
    .card {
        border-radius: 13px;
    }

    .card-body {
        border: 1px solid #e2e2e2;
        border-top: none;
        border-radius: 0 0 10px 10px;
        position: relative;
    }

    .card-title {
        padding: 10px;
    }

    .d-inline-block {
        padding: 10px;
    }

    .float-right {
        position: absolute;
        top: 100px;
        right: 20px;
    }

    .float-right i {
        opacity: 0.6;
        font-size: 60px;
    }
</style>

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-lg-3 col-sm-6">
            <div class="card gradient-1">
                <div class="card-body">
                    <h3 class="card-title text-white">Số người dùng</h3>
                    <div class="d-inline-block">
                        <h2 class="text-white">@ViewData["UserCount"]</h2>
                        <p class="text-white mb-0">Jan - March 2019</p>
                    </div>
                    <span class="float-right display-5 opacity-5"><i class="fa fa-users"></i></span>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="card gradient-2">
                <div class="card-body">
                    <h3 class="card-title text-white">Net Profit</h3>
                    <div class="d-inline-block">
                        <h2 class="text-white">$ 8541</h2>
                        <p class="text-white mb-0">Jan - March 2019</p>
                    </div>
                    <span class="float-right display-5 opacity-5"><i class="fa fa-money"></i></span>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="card gradient-3">
                <div class="card-body">
                    <h3 class="card-title text-white">New Customers</h3>
                    <div class="d-inline-block">
                        <h2 class="text-white">4565</h2>
                        <p class="text-white mb-0">Jan - March 2019</p>
                    </div>
                    <span class="float-right display-5 opacity-5"><i class="fa fa-users"></i></span>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="card gradient-9">
                <div class="card-body">
                    <h3 class="card-title text-white">Customer Satisfaction</h3>
                    <div class="d-inline-block">
                        <h2 class="text-white">99%</h2>
                        <p class="text-white mb-0">Jan - March 2019</p>
                    </div>
                    <span class="float-right display-5 opacity-5"><i class="fa fa-heart"></i></span>
                </div>
            </div>
        </div>
    </div>

   
</div>
<div style="display: flex; justify-content: space-between;">
    <div style="width: 40%;">
        <h1>Biểu đồ cột</h1>
        <canvas id="myChart"></canvas>
    </div>
    <div style="width: 48%;">
        <h1>Biểu đồ hình tròn</h1>
        <canvas id="myPieChart"></canvas>

    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var ctx = document.getElementById('myChart').getContext('2d');

    // Định nghĩa dữ liệu biểu đồ cột
    var data = {
        labels: ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4'],
        datasets: [{
            label: 'Doanh thu',
            data: [1000, 1500, 2000, 1200],
            backgroundColor: 'rgba(75, 192, 192, 0.2)',
            borderColor: 'rgba(75, 192, 192, 1)',
            borderWidth: 1
        }]
    };

    // Cấu hình biểu đồ
    var options = {
        scales: {
            y: {
                beginAtZero: true
            }
        }
    };

    // Tạo biểu đồ cột
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: data,
        options: options
    });

    var ctxPie = document.getElementById('myPieChart').getContext('2d');

    // Định nghĩa dữ liệu biểu đồ hình tròn
    var dataPie = {
        labels: ['Loại A', 'Loại B', 'Loại C'],
        datasets: [{
            data: [30, 40, 30],
            backgroundColor: ['rgba(255, 99, 132, 0.7)', 'rgba(75, 192, 192, 0.7)', 'rgba(255, 206, 86, 0.7)']
        }]
    };

    // Cấu hình biểu đồ hình tròn
    var optionsPie = {
        responsive: true,
        maintainAspectRatio: false
    };

    // Tạo biểu đồ hình tròn
    var myPieChart = new Chart(ctxPie, {
        type: 'pie',
        data: dataPie,
        options: optionsPie
    });
</script>
