@model IEnumerable<CodeFirst.Models.Entities.Branch>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Quản lý chi nhánh</h1>

<style>
    .btn {
        color:white;
        margin-left:5px;
    }
    i{
        margin-right: 3px;
    }
</style>
<p>
    <a class="btn btn-outline-primary" asp-action="Create">Thêm chi nhánh mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>

            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
               <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>

            <td style="width:15%">
                    <img src="@item.Image" class="rounded float-start" style="width:100%; height:10rem">
            </td>
            <td>
                    <a class="btn btn-outline-info" asp-action="Edit" asp-route-id="@item.BranchId">Sửa</a> |
                    <a class="btn btn-outline-success" asp-action="Details" asp-route-id="@item.BranchId">Chi tiết</a> |
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.BranchId">Xóa</a>

            </td>
                <td>
                    @if (item.IsLocked)
                    {
                        <form asp-action="UnlockBranch" asp-route-branchId="@item.BranchId" method="post">
                            <button type="submit" class="btn btn-success"><i class="icofont-key"></i>  Mở khóa</button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="LockBranch" asp-route-branchId="@item.BranchId" method="post">
                            <button type="submit" class="btn btn-danger"><i class="icofont-ui-block"></i>  Tạm khóa</button>
                        </form>
                    }
                </td>
        </tr>
}
    </tbody>
</table>


