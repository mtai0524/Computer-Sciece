@model CodeFirst.Models.Entities.AddMenuToComboViewModel
@{
    ViewData["Title"] = "AddMenuToCombo";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>AddMenuToCombo</h1>

<form method="post">
    <div class="form-group">
        <label for="ComboMenuId">Chọn Combo Menu:</label>
        <select asp-for="ComboMenuId" asp-items="ViewBag.ComboMenus" class="form-control"></select>
    </div>

    <div class="form-group">
        <label for="SelectedMenuIds">Chọn Menu:</label>
        <select asp-for="SelectedMenuIds" asp-items="ViewBag.Menus" class="form-control" multiple></select>
    </div>

    <button type="submit" class="btn btn-primary">Thêm Menu vào Combo</button>
</form>